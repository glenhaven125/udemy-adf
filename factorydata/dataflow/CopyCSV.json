{
	"name": "CopyCSV",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DelimitedText_Customer_CSV",
						"type": "DatasetReference"
					},
					"name": "SourceCSVFile"
				}
			],
			"sinks": [],
			"transformations": [],
			"scriptLines": [
				"source(output(",
				"          id as string,",
				"          Name as string,",
				"          age as string,",
				"          Address_id as string,",
				"          Sales_id as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SourceCSVFile"
			]
		}
	}
}